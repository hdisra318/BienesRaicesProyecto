div(class="bg-white shadow rounded-lg hover:scale-105 transition-all")
    img(class="object-cover h-72 w-full" src=`/uploads/${propiedad.imagen}` alt=`Imagen de la propiedad ${propiedad.titulo}`)
    div(class="p-5 space-y-4")
        h3(class="text-2xl font-bold")= propiedad.titulo
        p(class="text-md text-gray-600") Habitaciones: 
            span(class="text-gray-800 font-bold")= propiedad.habitaciones
        p(class="text-md text-gray-600") WC: 
            span(class="text-gray-800 font-bold")= propiedad.wc
        p(class="text-md text-gray-600") Precio: 
            span(class="text-gray-800 font-bold")= propiedad.precio.nombre
        a(href=`/propiedad/${propiedad.id}` class="bg-teal-600 w-full block text-center font-bold text-white p-2 rounded") Ver Propiedad